@{
    ViewData["Title"] = "Home Page";
}
@model Service.DTO.HomeViewModel

<div class="container">
    <!-- Hero Section -->
    <div class="hero-section mb-5">
        <div class="row">
            <div class="col-md-8">
                @foreach (var mainFeatured in Model.FeaturedNews)
                {
                    <div class="card main-featured">
                        <div class="card-body">
                            <h2 class="card-title">@mainFeatured.NewsTitle</h2>
                            <p class="card-text">@mainFeatured.Headline</p>
                            <a href="@Url.Action("Detail", "News", new { id = mainFeatured.NewsArticleId })"
                               class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4">
                <!-- Categories Widget -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Categories</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            @foreach (var category in Model.Categories)
                            {
                                <li class="mb-2">
                                    <a href="@Url.Action("Index", "Home", new { id = category.CategoryId })"
                                       class="text-decoration-none">
                                        @category.CategoryName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
